{
  "name": "braindump-voice-processor",
  "version": "2.5.0-beta1",
  "description": "BrainDump Voice Processor - Phase C.1 Beta: Auto-Fill, Tray, & Waveform",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && cp src/*.js dist/src/ 2>/dev/null || true",
    "build:watch": "tsc --watch",
    "build:native": "node-gyp rebuild",
    "prebuild": "rm -rf dist",
    "start": "npm run build && electron dist/main.js",
    "dev": "tsc --watch & electron dist/main.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "npm run build && playwright test",
    "test:e2e:debug": "npm run build && playwright test --debug",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit && echo 'Type checking passed'"
  },
  "keywords": [
    "voice",
    "recording",
    "transcription"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/config": "^3.3.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.23",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^11.5.0",
    "playwright": "^1.56.1",
    "sharp": "^0.34.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@sentry/electron": "^4.24.0",
    "config": "^3.3.12",
    "prom-client": "^15.1.3",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^4.7.1"
  }
}
