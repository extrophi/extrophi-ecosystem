# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/unified_scraper
PGVECTOR_EXTENSION=true

# Redis Configuration (for Celery queue)
REDIS_URL=redis://localhost:6379/0

# OpenAI API (for embeddings and LLM analysis)
OPENAI_API_KEY=sk-...

# Reddit OAuth (REQUIRED for Reddit scraper)
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=IAC-032-unified-scraper/1.0

# Twitter OAuth (OPTIONAL - for authenticated scraping)
# Currently using Playwright without authentication
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=

# YouTube (NO API KEY REQUIRED)
# Using youtube-transcript-api and yt-dlp (both free)

# ScraperAPI (OPTIONAL - fallback for complex sites)
SCRAPER_API_KEY=

# Jina.ai Reader API (OPTIONAL - for web scraping)
# Free tier: 50K pages/month, no key required
JINA_API_KEY=

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./chroma_db

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO
