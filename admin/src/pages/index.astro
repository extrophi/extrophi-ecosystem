---
import AdminLayout from '../layouts/AdminLayout.astro';
import StatsCard from '$lib/components/StatsCard.svelte';

// In production, fetch from API
const stats = {
  totalUsers: 2847,
  activeUsers: 573,
  totalTenants: 42,
  apiCalls: "1.2M",
  revenue: "$48,352",
  growth: 12.5
};
---

<AdminLayout title="Dashboard">
  <div class="p-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold">Dashboard</h1>
      <p class="text-muted-foreground">Welcome back! Here's an overview of your platform.</p>
    </div>

    <!-- Stats Grid -->
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 mb-8">
      <StatsCard 
        client:load
        title="Total Users" 
        value={stats.totalUsers.toLocaleString()}
        description="All registered users"
        trend={8.2}
      />
      <StatsCard 
        client:load
        title="Active Users" 
        value={stats.activeUsers.toLocaleString()}
        description="Users active in last 30 days"
        trend={-2.4}
      />
      <StatsCard 
        client:load
        title="Total Tenants" 
        value={stats.totalTenants}
        description="Active customer accounts"
        trend={stats.growth}
      />
      <StatsCard 
        client:load
        title="API Calls" 
        value={stats.apiCalls}
        description="Total API calls this month"
        trend={23.1}
      />
      <StatsCard 
        client:load
        title="Revenue" 
        value={stats.revenue}
        description="Monthly recurring revenue"
        trend={stats.growth}
      />
      <StatsCard 
        client:load
        title="Uptime" 
        value="99.98%"
        description="Last 30 days"
        trend={0.02}
      />
    </div>

    <!-- Charts Section -->
    <div class="grid gap-6 md:grid-cols-2 mb-8">
      <!-- API Usage Chart -->
      <div class="rounded-lg border bg-card p-6">
        <h3 class="text-lg font-semibold mb-4">API Usage</h3>
        <div class="h-64 flex items-center justify-center text-muted-foreground">
          <p>Chart component would go here</p>
        </div>
      </div>

      <!-- Revenue Chart -->
      <div class="rounded-lg border bg-card p-6">
        <h3 class="text-lg font-semibold mb-4">Revenue Growth</h3>
        <div class="h-64 flex items-center justify-center text-muted-foreground">
          <p>Chart component would go here</p>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="rounded-lg border bg-card">
      <div class="p-6">
        <h3 class="text-lg font-semibold mb-4">Recent Activity</h3>
        <div class="space-y-4">
          <div class="flex items-center">
            <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
            <div class="flex-1">
              <p class="text-sm font-medium">New tenant registered: Acme Corp</p>
              <p class="text-xs text-muted-foreground">2 minutes ago</p>
            </div>
          </div>
          <div class="flex items-center">
            <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
            <div class="flex-1">
              <p class="text-sm font-medium">API key created for user@example.com</p>
              <p class="text-xs text-muted-foreground">15 minutes ago</p>
            </div>
          </div>
          <div class="flex items-center">
            <div class="w-2 h-2 bg-yellow-500 rounded-full mr-3"></div>
            <div class="flex-1">
              <p class="text-sm font-medium">High API usage detected for tenant_42</p>
              <p class="text-xs text-muted-foreground">1 hour ago</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>
