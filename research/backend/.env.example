# PostgreSQL Database Configuration
# Copy this file to .env and update with your settings

# Option 1: Full connection string (preferred)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/research_db

# Option 2: Individual components (alternative)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=research_db
DB_USER=postgres
DB_PASSWORD=postgres

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# OpenAI API (for embeddings - will be used by LAMBDA agent)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Scraper API keys (will be used by IOTA agent)
SCRAPER_API_KEY=your_scraper_api_key_here
JINA_API_KEY=your_jina_api_key_here
