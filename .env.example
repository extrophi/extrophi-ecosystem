# IAC-032 Unified Scraper - Environment Variables
# Copy this to .env and fill in your values

# Database (PostgreSQL container)
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://scraper:${DB_PASSWORD}@postgres:5432/unified_scraper

# Redis (container)
REDIS_URL=redis://redis:6379

# ChromaDB (container)
CHROMA_HOST=chromadb
CHROMA_PORT=8000

# OpenAI (for embeddings and GPT-4 analysis)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic (for Claude Sonnet polish)
ANTHROPIC_API_KEY=sk-ant-your-claude-key-here

# ScraperAPI (fallback for JS-rendered pages, $49/mo)
SCRAPERAPI_KEY=your-scraperapi-key-here

# Jina.ai Reader API (FREE tier, 50K pages/month)
JINA_API_KEY=your-jina-key-here

# Reddit OAuth (FREE tier, 1000 req/10min)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=IAC032Scraper/1.0

# Twitter (uses browser profiles, no API key needed)
TWITTER_PROFILE_DIR=./data/twitter_profiles
